<?xml version="1.0"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
    <context-param>
        <param-name>captcha-method</param-name>
        <param-value>cookies</param-value>
    </context-param>
    <context-param>
        <param-name>database-type</param-name>
        <param-value>mysql</param-value>
    </context-param>
    <context-param>
        <param-name>captcha-timeout</param-name>
        <param-value>1200000</param-value>
    </context-param>
    <context-param>
        <param-name>avatar-byte-size</param-name>
        <param-value>2097152</param-value>
    </context-param>
    <error-page>
        <exception-type>exception.DBException</exception-type>
        <location>/WEB-INF/jsp/error-pages/database-exception.jsp</location>
    </error-page>
    <error-page>
        <exception-type>exception.FilterValidationException</exception-type>
        <location>/WEB-INF/jsp/error-pages/clientError.jsp</location>
    </error-page>
</web-app>